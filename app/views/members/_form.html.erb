<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

	<%= f.fields_for :variables do |v| %>
	  <% @member.variables.each do |key, value| %>
		  <div class="field">
		    <%= v.label key %><br />	
		    <%= v.text_field key, :value =>@member.variables[key] %>
		  </div>
		 <% end %>
	<% end %>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
